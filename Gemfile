# A sample Gemfile
source "https://rubygems.org"

group :default do
  gem 'nokogiri'
  gem 'simple-rss'
  gem 'reverse_markdown'
  gem 'libnotify'
  gem 'rake'
  gem 'activerecord'
  gem 'pg'
end

group :test do
  gem 'database_cleaner'
  gem 'rspec'
  gem 'webmock'
end

group :development do
  gem 'capistrano'
  gem 'capistrano-bundler', require: false
  gem 'capistrano-rvm'
  gem 'rubocop'
end
